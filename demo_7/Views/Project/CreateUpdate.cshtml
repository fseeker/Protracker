@model UpdateProject

@{ 
    ViewData["Title"] = "Create an Update";

    var project = ViewBag.project as Project;
}

<h3>@project.Name</h3>

<h4>Create an Update</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" value="@project.Id" name="projectId" />
            <div class="form-group">
                <label>Current Status/Phase:</label>
                <input type="text" name="status" />
            </div>
            <div class="form-group">
                <label>Current Version:</label>
                <input type="text" name="version" />
            </div>
            <div class="form-group">
                <label>Description:</label>
                <input type="text" name="description" />
            </div>
            <div class="form-group">                
                @*<input type="checkbox" value="@DateTime.Now" name="status"/>*@
                <label asp-for="PushDate" class="control-label"></label>
                <input asp-for="PushDate" class="form-control" name="pushDate"/>
                <span asp-validation-for="PushDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Create Update</button>
            </div>
        </form>
    </div>
</div> 